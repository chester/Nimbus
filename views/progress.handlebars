<html>
<head>
    <title>Progress</title>

    <link href="css\progress.css" rel="stylesheet">
    <link href="css\progress-timeline.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>


<body>
    <h1 class="focus">{{topic}}</h1>
    <div class="timeline">
        {{#each progress_data}}
        <div class="{{containerClass}}">        
            <div class="content">
                <h2>{{stepName}}</h2>
                <p>{{feelingData}}</p>
                {{#if (ifEquals finished)}}
                    <a href="/checkin/{{stepName}}">
                    <button id=checkinButton>View</button>
                    </a>
                {{else}}
                    <a href="/checkin/{{stepName}}/{{@index}}">
                    <button id=checkinButton>Reflect</button>
                    </a>
                {{/if}}
            </div>
        </div>
        {{/each}}
    </div>

    <div class="editBtn">
        <a href="/stepsReflect">
            <button id="edit">Edit Steps</button>
        </a>
    </div>
    <div class="affirmBtn">
        <a href="/affirmations">
            <button id="affirm">Self-Affirmations</button>
        </a>
    </div>

    <script src="js/jquery-1.11.0.js"></script>
    <script src="js/bootstrap.js"></script>
    <script src="js/progress.js"></script>
</body>

</html>
